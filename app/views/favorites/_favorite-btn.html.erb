<div class="d-flex lead align-items-center">
<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "text-muted text-decoration-none" do %>
    <i class="fas fa-heart mx-2"></i><%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: "text-muted text-decoration-none" do %>
    <i class="far fa-heart mx-2"></i><%= post.favorites.count %>
  <% end %>
<% end %>
</div>
