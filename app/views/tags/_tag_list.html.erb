<% tag_list.each do |list| %>
  <% if list.posts.count > 0 %>
    <%= link_to list.tag_name, posts_path(tag_id: list.id) %>
    <%= "(#{list.posts.count})" %>
    <% if current_user && current_user.is_admin %>
      <%= link_to tag_path(list.id), method: :delete, remote:true, data: { confirm: '本当に削除しますか？' } do %>
        <i class="fas fa-times link"></i>
      <% end %>
    <% end %>
  <% end %>
<% end %>