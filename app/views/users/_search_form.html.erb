<%= search_form_for q, url: users_path do |f| %>
  <div class="input-group search-area my-3">
    <%= f.label :name_cont, 'ユーザー名で部分一致検索', class: "label" %>
    <%= f.search_field :name_cont, class: "form-control", placeholder: "Search..." %>
    <%= button_tag type: "submit", class: "btn btn-light " do %>
      <i class="fas fa-search"></i>
    <% end %>
  </div>
<% end %>