<div class="container-fluid">
  <div class="d-flex">
    <!--左側・ユーザー情報-->
    <div class="sidebar">
      <%= render 'info', user: @user %>
    </div>
    <!--右側・各種一覧-->
    <div class="border border-2" style="max-width: 1410px">
      <!--タブ-->
      <ul class="nav nav-tabs">
        <li class="active nav-item">
          <%= link_to "ユーザーの投稿一覧", user_path(@user), class: "nav-link #{@posts.present? ? 'active-tab' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "いいね！した投稿一覧", user_path(@user, tab_type: 'favorite_posts'), class: "nav-link #{@favorite_posts.present? ? 'active-tab' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "フォロー中一覧", user_path(@user, tab_type: 'followings'), class: "nav-link #{@followings_tab.present? ? 'active-tab' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "フォロワー一覧", user_path(@user, tab_type: 'followers'), class: "nav-link #{@followers_tab.present? ? 'active-tab' : ''}" %>
        </li>
      </ul>
      <div class="tab-content">
        <% if @favorite_posts.present? %>
          <%= render 'posts/index', posts: @favorite_posts, line: false %>
        <% elsif @followings_tab.present? %>
          <%= render 'index', users: @followings %>
        <% elsif @followers_tab.present? %>
          <%= render 'index', users: @followers %>
        <% else %>
          <%= render 'posts/index', posts: @posts, line: false %>
        <% end %>
      </div><!--タブの中身ここまで-->
    </div><!--右側ここまで-->
  </div>
</div>

