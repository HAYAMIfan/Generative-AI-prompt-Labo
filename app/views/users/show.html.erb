<div class="container">
  <div class="row d-flex">
    <!--左側・ユーザー情報-->
    <div class="col-md-4 border border-2">
      <div class="my-2"><%= image_tag @user.get_icon %></div>
      <h4 class="mb-3"><%= @user.name %></h4>
      <div class="mb-3 text-muted"><%= simple_format(@user.description.presence) || "自己紹介コメントを書いてみましょう！" %></div>
      <!--設定・フォロー・停止ボタン-->
      <% if user_signed_in? %>
        <div class="mb-3">
          <% if @user == current_user %>
            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog mr-2"></i>設定する
            <% end %>
          <% elsif current_user.is_admin %>
          <!--↓アカウントの停止-->
            <% if @user.is_stopped? %>
              <div class="bg-secondary">停止済み</div>
            <% else %>
              <%= link_to stop_user_path(@user), method: :patch, class: "btn btn-danger btn-block" do %>
                <i class="fas fa-ban mr-2"></i>停止する
              <% end %>
            <% end %>
          <!--↑アカウントの停止-->
          <% end %>
        </div>
      <% end %>
    </div>
    <!--右側・各種一覧-->
    <div class="col-md-8 border border-2">
      <!--タブ-->
      <ul class="nav nav-tabs nav-pills" role="tablist">
        <li class="active" role="presentation">
          <a class="nav-link text-muted" aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">ユーザーの投稿一覧</a>
        </li>
        <li role="presentation">
          <a class="nav-link text-muted" aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">いいね！した投稿</a>
        </li>
        <li role="presentation">
          <a class="nav-link text-muted" aria-controls="tab_c" data-toggle="tab" href="#tab_c" role="tab">フォロー中・フォロワー一覧</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab_a" role="tabpanel">
          <%= render 'posts/index', posts: @posts, flag: false %>
        </div>
        <div class="tab-pane" id="tab_b" role="tabpanel">
          <%= render 'posts/index', posts: @favorite_posts, flag: false %>
        </div>
        <div class="tab-pane" id="tab_c" role="tabpanel">
          <h1>仮置き</h1>
        </div>
      </div><!--タブの中身ここまで-->
    </div><!--右側ここまで-->
  </div>
</div>