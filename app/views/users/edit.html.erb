<div class="container">
  <div class="col-6 justify-content-center mx-auto">
    <h3>ユーザー情報編集</h3>
    <%= form_with model: @user, url: users_path do |f| %>
    <div class="mt-3">
      <%= f.label :icon, "ユーザーアイコン", class: "font-weight-bold justify-content-start mr-2" %>
      <%= f.file_field :icon, accept: "image/*" %>
    </div>
    <div class="mt-3">
      <%= f.label :name, "ユーザー名", class: "font-weight-bold justify-content-start mr-2" %>
      <%= f.text_field :name, required: true, size: "50x1", maxlength: "50", class: "form-control" %>
    </div>
    <div class="mt-3">
      <%= f.label :description, "自己紹介", class: "font-weight-bold justify-content-start mr-2" %>
      <%= f.text_area :description, rows: 2, placeholder: "自己紹介コメントを書きましょう！(140字以内)", size: "50x3", maxlength: "140", class: "form-control" %>
    </div>
    <div class="mt-3">
      <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
    </div>
    <% end %>
  </div>
</div>
