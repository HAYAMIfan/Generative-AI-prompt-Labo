<div class="container">
  <h2 class="mt-5">ログイン</h2>

  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field mt-3 mx-auto">
      <%= f.label :email, "メールアドレス", class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
    </div>

    <div class="field mt-3 mx-auto">
      <%= f.label :password, "パスワード", class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-25" %>
    </div>

    <div class="actions mt-3 mx-auto">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <h5 class="mt-5">会員登録がお済みでない方は</h5>
  <div class="mt-3">
    <u><%= link_to "こちら", new_user_registration_path %></u>
    <span>から新規登録を行ってください。</span>
  </div>
  
</div>