<%= form_with model:post do |f| %>
  <div class="justify-content-center mt-3">
    <%= f.label :images, "スクリーンショット", class: "font-weight-bold justify-content-start mr-2" %>
    <%= f.file_field :images, multiple: true, accept: 'image/jpg,image/jpeg,image/png' %>
  </div>

  <div class="justify-content-center mt-3">
    <%= f.label :title, "タイトル", class: "font-weight-bold justify-content-start" %>
    <%= f.text_area :title, required: true, rows: 2, class: "form-control" %>
  </div>

  <div class="justify-content-center mt-3">
    <%= f.label :content, "本文", class: "font-weight-bold justify-content-start" %>
    <%= f.text_area :content, required: true, rows: 20, class: "form-control" %>
  </div>

  <div class="text-center mt-3">
    <%= f.submit '投稿する', class: "btn btn-outline-success" %>
  </div>
<% end %>