<div class="container d-flex">
  <div>
    <div class="overflow-auto col-auto">
    <!--画像を中心基準で幅700で切り抜く(高さはそのままにするために適当に大きな数値)-->
    <% @post.image.each do |image| %>
      <div class="m-4">
        <%= image_tag image.variant( gravity: "center", crop: "700x1500+0+0").processed %>
      </div>
    <% end %>
    </div>
  </div>

  <div>
    <h2><%= @post.title %></h2>
    <%= @post.user.name %><br>
    <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %><br>
    <%= @post.updated_at.strftime("%Y年%m月%d日 %H:%M") %><br>
    <%= @post.favorite_count %>
    <div class="overflow-auto" style="background-color:#fff2e5">
      <%= @post.content %>
    </div>
  </div>

</div>