<div>
  <h3><%= @post.title %></h3>
  <div>
    <%= image_tag @post.get_SS %>
  </div>
  <div>
    <%= @post.user.name %><br>
    <%= @post.created_at.strftime("%Y/%m/%d %H:%M:%S") %><br>
    <%= @post.updated_at.strftime("%Y/%m/%d %H:%M:%S") %><br>
    <%= @post.favorite_count %>
  </div>
  <p><%= @post.content %></p>
</div>