<div class="container-fluid">
  <div class="d-flex">
    <div class="sidebar tag_list">
      <h5>タグリスト</h5>
      <%= render "tags/tag_list", tag_list: @tag_list %>
    </div>
    <div>
      <div class="d-flex justify-content-between">
      <h3 class="my-3 mr-4">
        <% if params[:q] %>
          「<%= params[:q][:title_or_content_cont] %>」の検索結果
        <% elsif params[:tag_id] %>
          「<%= @tag.tag_name %>」の検索結果
        <% elsif params[:ranking] %>
          人気順
        <% elsif params[:following] %>
          フォロー中
        <% else %>
          新着順
        <% end %>
        一覧
      </h3>
      <%= render "search_form", q: @q %>
    </div>
    <%= render "index", posts: @posts, line: false %>
    </div>
  </div>
</div>