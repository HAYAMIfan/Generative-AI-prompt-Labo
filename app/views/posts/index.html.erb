<div class="container-fluid">
  <div class="d-flex">
    <div class="sidebar">
      <h5>タグリスト</h5>
      <% @tag_list.each do |list| %>
        <% if list.posts.count > 0 %>
          <%= link_to list.tag_name, posts_path(tag_id: list.id) %>
          <%= "(#{list.posts.count})" %>
        <% end %>
      <% end %>
    </div>
    <div>
      <div class="d-flex justify-content-between">
      <h3 class="my-3 mr-4">
        <% if params[:q] %>
          「<%= params[:q][:title_or_content_cont] %>」の検索結果
        <% elsif params[:tag_id] %>
          「<%= @tag.tag_name %>」の検索結果
        <% elsif params[:ranking] %>
          人気順
        <% elsif params[:following] %>
          フォロー中
        <% else %>
          新着順
        <% end %>
        一覧
      </h3>
      <%= render "search_form", q: @q %>
    </div>
    <%= render "index", posts: @posts, line: false %>
    </div>
  </div>
</div>